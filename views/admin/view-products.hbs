<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
      </div>
<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
      <th scope="col">Prices</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.discription}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 100px;,height: 100px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td >
        <a class="btn btn-primary" href="/admin/edit-products/{{this._id}}">Edit</a>
      <a class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}} ?')" href="/admin/delete-products/{{this._id}}">Delete></a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
</div> 
</section>