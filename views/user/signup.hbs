<section class="p-5 ">
  <div class="container">
    <div class="col-md-12 ">
      <form style="margin-left: 20em;" action="/signup" method="POST">
        <h3>Create a Account</h3>
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="Name" style="width: 25em;" placeholder="Enter your name">
        </div>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" name="Email" style="width: 25em;" placeholder="Enter email">
          
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="Password" style="width: 25em;" placeholder="Password">
          <a href="/login">Already have an Account</a>
        </div>


        <button type="submit" class="btn btn-primary">Sign Up</button>
      </form>
    </div>
  </div>
</section>