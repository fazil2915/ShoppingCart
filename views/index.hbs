
    <section class="mt-5">
        <div class="container">
            <div class="row">
               {{#each products}}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top"
                            src="{{this.image}}"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.discription}}</p>
                            <h3 class="card-text">{{this.price}}</h3>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
                {{/each}}
               
            </div>
        </div>
    </section>

   